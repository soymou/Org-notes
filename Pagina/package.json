{
  "name": "tidal-tower",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run build:notes && concurrently \"npm run watch:notes\" \"npm run dev:server\"",
    "dev:server": "astro dev",
    "build": "npm run build:notes && astro build",
    "preview": "astro preview",
    "build:notes": "./scripts/build-notes.sh",
    "watch:notes": "chokidar \"org/**/*.org\" -c \"./scripts/build-notes.sh\"",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/starlight": "^0.37.4",
    "@tailwindcss/vite": "^4.0.9",
    "astro": "^5.16.15",
    "katex": "^0.16.28",
    "rehype-katex": "^7.0.1",
    "rehype-mathjax": "^7.1.0",
    "remark-math": "^6.0.0",
    "tailwindcss": "^4.0.9"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.1.2"
  }
}
